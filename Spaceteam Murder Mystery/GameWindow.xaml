<Window x:Class="SpaceTeamMystery.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mystery In Progress" Height="400" Width="600">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock x:Name="txtStory" Text="You're on the spaceship..." FontSize="16" Margin="0,0,0,20" TextWrapping="Wrap" />
            <Button Content="Search the Engine Room" Click="Choice1_Click" Margin="0,0,0,10" />
            <Button Content="Check the Crew Quarters" Click="Choice2_Click" />
        </StackPanel>
    </Grid>
</Window>