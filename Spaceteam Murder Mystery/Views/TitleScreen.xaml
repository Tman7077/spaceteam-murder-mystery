<UserControl
    x:Class="SMM.Views.TitleScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock
                Margin="0,0,0,20"
                FontSize="20"
                Text="Welcome to the Space Team Murder Mystery!" />
            <Button
                Width="120"
                Margin="0,0,0,10"
                Click="StartGame_Click"
                Content="Start Game" />
            <Button
                Width="120"
                Click="Exit_Click"
                Content="Exit" />
        </StackPanel>
    </Grid>
</UserControl>
