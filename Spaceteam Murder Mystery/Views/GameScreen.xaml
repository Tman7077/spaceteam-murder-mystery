<UserControl
    x:Class="SMM.Views.GameScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dynamic="clr-namespace:SMM.Services.DynamicXAML"
    mc:Ignorable="d" 
    d:DesignWidth="854"
    d:DesignHeight="480">
    <Grid Margin="20">
        <StackPanel>
            <StackPanel.Resources>
                <Style TargetType="{x:Type Button}" BasedOn="{StaticResource CornerCutButton}">
                    <Setter Property="Margin" Value="15"/>
                    <Setter Property="Width" Value="{dynamic:DivideWidth 7}"/>
                </Style>
            </StackPanel.Resources>
            <Label
                Style="{StaticResource ScreenHeader}"
                x:Name="header"
                Margin="0,0,0,20" />
            <Button
                Click="Kill_Click"
                Content="Kill Someone" />
            <Button
                Click="Talk_Click"
                Content="Talk to people" />
        </StackPanel>
    </Grid>
</UserControl>
