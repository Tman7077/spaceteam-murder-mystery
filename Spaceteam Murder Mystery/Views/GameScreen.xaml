<UserControl
    x:Class="SMM.Views.GameScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock
                x:Name="txtStory"
                Margin="0,0,0,20"
                FontSize="16"
                Text="You're on the spaceship..."
                TextWrapping="Wrap" />
            <Button
                Margin="0,0,0,10"
                Click="Choice1_Click"
                Content="Search the Engine Room" />
            <Button
                Click="Choice2_Click"
                Content="Check the Crew Quarters" />
        </StackPanel>
    </Grid>
</UserControl>
