<UserControl
    x:Class="SMM.Views.GameScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="20">
        <StackPanel>
            <Label
                x:Name="header"
                Margin="0,0,0,20"
                FontSize="16"
                Style="{StaticResource ScreenHeader}"
                Content="You're on the spaceship..." />
            <Button
                Style="{StaticResource CornerCutButton}"
                Width="200"
                Click="Kill_Click"
                Content="Kill Someone!" />
        </StackPanel>
    </Grid>
</UserControl>
